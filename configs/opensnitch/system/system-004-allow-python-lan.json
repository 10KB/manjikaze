    "name": "system-004-allow-python-lan",
    "description": "Allow Python scripts to communicate on the local network. Covers SSDP discovery (239.255.255.250) for IoT/Home Assistant device scanning and direct LAN communication. Uses a version-independent regex for the Python binary path to survive Python version upgrades.",
    "action": "allow",
    "duration": "always",
    "operator": {
        "operand": "list",
        "data": "",
        "type": "list",
        "list": [
            {
                "operand": "process.path",
                "data": "^/usr/bin/python3(\\.[0-9]+)?$",
                "type": "regexp",
                "list": null,
                "sensitive": false
            },
            {
                "operand": "dest.ip",
                "data": "^(10\\..*|172\\.(1[6-9]|2[0-9]|3[01])\\..*|192\\.168\\..*|239\\.255\\.255\\.250|224\\.0\\.0\\.251|ff02::fb)$",
                "type": "regexp",
                "list": null,
                "sensitive": false
            }
        ],
        "sensitive": false
    },
    "enabled": true,
    "precedence": false,
    "nolog": false
}