                "data": "^/tmp/\\.mount_todois.*/todoist$",
                "type": "regexp",
                "list": null,
                "sensitive": false
            },
            {
                "operand": "dest.port",
                "data": "53",
                "type": "simple",
                "list": null,
                "sensitive": false
            }
        ],
        "sensitive": false
    },
    "enabled": true,
    "precedence": false,
    "nolog": false
